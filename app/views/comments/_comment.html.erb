<table class="table table-striped table-hover table-bordered" >
  <thead>
    <tr>
      <th scope="col">
        <% if comment.user.nil? %>
          <small><%= "User delete his page" %> || comment created at:
                 <%= comment.created_at.strftime('%Y-%m-%d %H:%M:%S') %></small>
        <% else %>
          <small>by <%= comment.user.firstname + " " + comment.user.lastname %> || created at:
                    <%= comment.created_at.strftime('%Y-%m-%d %H:%M:%S') %></small>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="table table-dark"><%= comment.content %></td>
    </tr>
  </tbody>
</table>


