<%= form_with scope: :comment, url: post_comments_path(post) do |p| %>
  <div class="field form-group">
    <%= p.text_area :content, minlength: 2, placeholder: "Your comment", class:"form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= p.submit "Submit post", class:"btn btn-outline-dark" %>
  </div>
<% end %>
