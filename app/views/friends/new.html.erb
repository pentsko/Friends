<h1>New user</h1>

<%= form_with(model: @user, url: user_new_path, local: true) do |f| %>
  <div class="field form-group">
  <div class="field">
    <%= f.label :email %>
<%= f.text_field :email, required: true, minlength: 3, placeholder: "email"%>
  </div><br />
  <div class="field">
    <%= f.label :firstname %>
<%#= f.text_field :name, required: true, minlength: 3, placeholder: "name" %>
<%= f.text_field :firstname, required: true, minlength: 3, placeholder: "firstname" %>
  </div><br />
  <div class="field">
    <%= f.label :lastname %>
<%= f.text_field :lastname, required: true, minlength: 3, placeholder: "lastname" %>
  </div><br />
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

</div>


